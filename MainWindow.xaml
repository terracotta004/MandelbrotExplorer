<Window x:Class="MandelbrotExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mandelbrot Explorer"
        Width="1000"
        Height="700"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Controls panel -->
        <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Mandelbrot Explorer" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

            <TextBlock Text="Center X (Real)" Margin="0,0,0,5"/>
            <TextBox x:Name="CenterXTextBox" Text="-0.5" Margin="0,0,0,10"/>

            <TextBlock Text="Center Y (Imag)" Margin="0,0,0,5"/>
            <TextBox x:Name="CenterYTextBox" Text="0.0" Margin="0,0,0,10"/>

            <TextBlock Text="Zoom (bigger = closer)" Margin="0,0,0,5"/>
            <TextBox x:Name="ZoomTextBox" Text="1.0" Margin="0,0,0,10"/>

            <TextBlock Text="Max Iterations" Margin="0,0,0,5"/>
            <TextBox x:Name="MaxIterationsTextBox" Text="200" Margin="0,0,0,20"/>

            <Button Content="Render" Height="30" Click="RenderButton_Click" Margin="0,0,0,10"/>

            <TextBlock Text="Keyboard shortcuts:"
                       Margin="0,10,0,5"
                       FontWeight="Bold"/>

            <TextBlock Text="Arrow keys: Move" Margin="0,0,0,2"/>
            <TextBlock Text="+ / - : Zoom in / out" Margin="0,0,0,2"/>
            <TextBlock Text="[ / ] : Decrease / increase iterations" Margin="0,0,0,2"/>

            <TextBlock x:Name="StatusTextBlock"
                       Margin="0,15,0,0"
                       Text="Ready."
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Image display -->
        <Border Grid.Column="1" Margin="10" BorderBrush="Gray" BorderThickness="1">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Image x:Name="MandelbrotImage"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
